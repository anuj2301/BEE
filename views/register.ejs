<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-[60vh]">
  <div class="w-full max-w-md">
    <!-- Register Card -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-gradient-to-r from-accent to-secondary rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-2xl">✨</span>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-200 mb-2">Join LinkShort</h2>
        <p class="text-gray-600 dark:text-gray-400">Create your free account today</p>
      </div>

      <!-- Error Message -->
      <% if (message && message.length > 0) { %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
          <div class="flex items-center">
            <span class="text-red-500 mr-2">⚠️</span>
            <p class="text-red-700 dark:text-red-300 text-sm"><%= message %></p>
          </div>
        </div>
      <% } %>

      <!-- Register Form -->
      <form action="/register" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Full Name
          </label>
          <input 
            type="text" 
            id="name"
            name="name" 
            placeholder="Enter your full name" 
            required 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-colors duration-200"
          >
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Email Address
          </label>
          <input 
            type="email" 
            id="email"
            name="email" 
            placeholder="Enter your email" 
            required 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-colors duration-200"
          >
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Password
          </label>
          <input 
            type="password" 
            id="password"
            name="password" 
            placeholder="Create a strong password" 
            required 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-colors duration-200"
          >
          <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
            Use at least 8 characters with a mix of letters and numbers
          </p>
        </div>

        <button 
          type="submit"
          class="w-full bg-gradient-to-r from-accent to-secondary hover:from-blue-400 hover:to-red-600 text-white py-3 rounded-lg font-semibold transition-all duration-200 hover:shadow-lg transform hover:-translate-y-0.5"
        >
          Create Account
        </button>
      </form>

      <!-- Benefits -->
      <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <h4 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2">What you'll get:</h4>
        <ul class="text-xs text-gray-600 dark:text-gray-400 space-y-1">
          <li>• Unlimited URL shortening</li>
          <li>• Custom link aliases</li>
          <li>• Link management dashboard</li>
          <li>• Click tracking & analytics</li>
        </ul>
      </div>

      <!-- Divider -->
      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-600">
        <p class="text-center text-gray-600 dark:text-gray-400 text-sm">
          Already have an account?
          <a href="/login" class="text-accent hover:text-blue-400 font-semibold ml-1 transition-colors duration-200">
            Sign in here
          </a>
        </p>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="text-center mt-6">
      <p class="text-gray-500 dark:text-gray-400 text-sm">
        By signing up, you agree to our Terms & Privacy Policy
      </p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>